{
	"compilerOptions": {
		"target": "ES2023",
		"lib": ["ES2023"],
		"module": "Node16",
		"moduleResolution": "Node16",
		"rootDir": "src",
		"outDir": "out",
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"types": ["node", "vscode"],
		"incremental": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "out", ".vscode-test"]
}
