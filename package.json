{
  "name": "custom-explorer-sort",
  "displayName": "Custom Explorer Sort",
  "description": "Re-order files and folder as you wish in VSCode",
  "version": "0.0.3",
  "license": "MIT",
  "engines": {
    "vscode": "^1.96.0"
  },
  "publisher": "FlyweightSoft",
  "author": "FlyweightSoft <santhosh@flyweightsoft.com>",
  "icon": "public/logo.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/main.js",
  "contributes": {
    "commands": [
      {
        "command": "custom-explorer-sort.applyOrdering",
        "title": "Custom Explorer Sort: Apply Order Now"
      }
    ],
    "configurationDefaults": {
      "explorer.sortOrder": "modified"
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
  "@typescript-eslint/eslint-plugin": "^8.17.0",
  "@typescript-eslint/parser": "^8.17.0",
  "typescript-eslint": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flyweightsoft/custom-explorer-sort"
  },
  "dependencies": {
    "minimatch": "^10.0.1"
  }
}