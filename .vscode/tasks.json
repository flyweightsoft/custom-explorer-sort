{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "compile",
			"label": "npm: compile",
			"problemMatcher": "$tsc",
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"type": "npm",
			"script": "lint",
			"label": "npm: lint",
			"problemMatcher": ["$eslint-stylish"],
			"group": "none"
		},
		{
			"type": "npm",
			"script": "test",
			"label": "npm: test",
			"group": "test",
			"problemMatcher": []
		}
	]
}
